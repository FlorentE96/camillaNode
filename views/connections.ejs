<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=100vw, initial-scale=1.0">
    <title>Connections</title>
    <script src="/src/camillaDSP.js" type="module">
    
    </script>
    <script src="/src/connections.js"></script>
    
    <link rel="stylesheet" href="css/connections.css">
    <link rel="stylesheet" href="css/main.css">

</head>

<body>
    <script type="module" >
        import camillaDSP from "/src/camillaDSP.js"        

        const server = document.getElementById('server').value;        
        const port = document.getElementById('port').value;    


        let DSP = new camillaDSP();        

        await DSP.connect(server,port)
        DSP.sendDSPMessage("GetVersion").then((r)=>{console.log(r)});
        let config = await DSP.sendDSPMessage("GetConfigJson");
        
        config["title"]="CamillaNode2";
        config["description"]="Config file created by CamillaNode 2";
        config["mixers"]={"recombine":{
                            "channels":{"in":2,"out":2},
                            "mapping":[
                                {"dest":0,"sources":[{"channel":0,"gain":0,"inverted":false,"mute":false},{"channel":1,"gain":0,"inverted":false,"mute":true}],"mute":false},
                                {"dest":1,"sources":[{"channel":0,"gain":0,"inverted":false,"mute":true},{"channel":1,"gain":0,"inverted":false,"mute":false}],"mute":false}
                                ]
                            }
                        };                  
        config["filters"]={};
        config["processors"]={};

        config["pipeline"]=[{"type":"Mixer","name":"recombine"}];
                            
        //console.log(config);

        DSP.sendDSPMessage({'SetConfigJson':JSON.stringify(config)}).then(r=>console.log(r)).catch(e=>console.log(e));
        config = await DSP.sendDSPMessage("GetConfigJson");
        console.log(config)
    
    </script>

    <div>
        <div><span>IP Address</span><input id="server" type="text" value="opizero2.local"></div>
        <div><span>Port</span><input id="port" type="text" value="1234"></div>
        <button onclick="connect()">Connect</button>        
    </div>
    <br>
    <div id="state"></div>




    
</body>
</html>
